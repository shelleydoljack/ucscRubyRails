<div class="depot_form">
  <% if flash[:alert] %>
    <p id="notice"><%= flash[:alert] %></p>
  <% end %>

 <!-- we use form_tag because we don't have a model behind the session controller -->
  <%= form_tag do %>
    <fieldset>
      <legend>Please Log In</legend>

      <div>
        <%= label_tag :name, 'Name:' %>
        <!-- we have to pass params because there is no model -->
        <%= text_field_tag :name, params[:name] %>
      </div>

      <div>
        <%= label_tag :password, 'Password:' %>
        <%= password_field_tag :password, params[:password] %>
      </div>

      <div>
        <%= submit_tag "Login" %>
      </div>
    </fieldset>
  <% end %>
</div>
